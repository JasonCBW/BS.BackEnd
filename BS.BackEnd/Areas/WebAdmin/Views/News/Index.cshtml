@using Entity.Base
@using PagedList.Mvc;
@model PagedList.IPagedList<News>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/WebAdmin/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN ROW -->
<section class="panel">
    <header class="panel-heading">
        <a class="btn btn-sm btn-success" href="@Url.Action("Create","News")">
            <i class="glyphicon glyphicon-plus">
            </i>
            <span>新增</span>
        </a>
        <a class="btn btn-sm btn-danger delete" href="@Url.Action("DeleteByIDList", "News")">
            <i class="glyphicon glyphicon-trash">
            </i>
            <span>删除所选</span>
        </a>
    </header>

    <div class="panel-body">
        <div class="adv-table editable-table">
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" class="checkbox form-control w-20"></th>
                        <th>标题</th>
                        <th>作者</th>
                        <th>来源</th>
                        <th>排序</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(item, index) in NewsList">
                        <td><input type="checkbox" class="checkbox form-control w-20" value="item.ID"></td>
                        <td>{{item.Title}}</td>
                        <td>{{item.Author}}</td>
                        <td>{{item.Source}}</td>
                        <td>{{item.Sort}}</td>
                        <td>
                            <a class="btn btn-primary btn-xs">
                                <i class="fa fa-pencil">
                                </i>
                            </a>
                            <a class="btn btn-danger btn-xs">
                                <i class="fa fa-trash-o" v-on:click="deleteNews(index,item)">
                                </i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="media text-center">
                <ul class="pagination"></ul>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Areas/WebAdmin/Scripts/bootbox.min.js"></script>
    <script src="~/Areas/WebAdmin/CommonJS/AjaxHelper.js"></script>
    <script src="~/Areas/WebAdmin/CommonJS/Common.js"></script>
    <script src="~/Areas/WebAdmin/app/NewsVM.js"></script>
    <script src="~/Areas/WebAdmin/Scripts/bootstrap-paginator.min.js"></script>
}